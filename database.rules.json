{
  "rules": {
    "users": {
      "$wid": {
        "$uid": {
          ".read": "auth.token.workspace.contains($wid)",
          ".write": "auth.token.workspace.contains($wid) && (auth.token.admin === true || auth.uid.contains($uid))"
        },
        ".read": "auth.token.workspace.contains($wid)",
        ".write": "auth.token.workspace.contains($wid) && auth.token.admin === true"
      }
    },
    "workspaces": {
      "$wid": {
        ".read": "auth.token.workspace.contains($wid)",
        ".write": "auth.token.workspace.contains($wid) && auth.token.admin === true"
      }
    }
  }
}